<div class="container mx-auto">
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="p-6">
            <h1 class="text-2xl font-bold text-gray-800 mb-6">Settings</h1>
            
            <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
                <!-- Sidebar -->
                <div class="col-span-1">
                    <div class="border-r border-gray-200 pr-4">
                        <ul class="space-y-2">
                            <li>
                                <a href="#profile" class="flex items-center space-x-3 p-2 rounded-md bg-blue-50 text-blue-600">
                                    <i class="fas fa-user"></i>
                                    <span>Profile</span>
                                </a>
                            </li>
                            <li>
                                <a href="#friends" class="flex items-center space-x-3 p-2 rounded-md hover:bg-gray-100 text-gray-700 transition-colors duration-300">
                                    <i class="fas fa-users"></i>
                                    <span>Friends</span>
                                </a>
                            </li>
                            <li>
                                <a href="#security" class="flex items-center space-x-3 p-2 rounded-md hover:bg-gray-100 text-gray-700 transition-colors duration-300">
                                    <i class="fas fa-shield-alt"></i>
                                    <span>Security</span>
                                </a>
                            </li>
                            <li>
                                <a href="#blocked" class="flex items-center space-x-3 p-2 rounded-md hover:bg-gray-100 text-gray-700 transition-colors duration-300">
                                    <i class="fas fa-ban"></i>
                                    <span>Blocked Users</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                
                <!-- Main Content -->
                <div class="col-span-1 md:col-span-3">
                    <!-- Profile Settings -->
                    <div id="profile-section" class="mb-8">
                        <h2 class="text-xl font-semibold text-gray-800 mb-4">Profile Settings</h2>
                        
                        <form action="/users/update" method="POST" class="space-y-4">
                            <div>
                                <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Name</label>
                                <input type="text" id="name" name="name" value="<%= user.name %>" 
                                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent">
                            </div>
                            <div>
                                <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                                <input type="email" id="email" name="email" value="<%= user.email %>" 
                                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent">
                            </div>
                            <button type="submit" class="bg-blue-500 text-white px-6 py-2 rounded-lg hover:bg-blue-600 transition duration-300 shadow-sm">
                                Save Changes
                            </button>
                        </form>
                    </div>
                    
                    <!-- Friends Section -->
                    <div id="friends-section" class="mb-8 hidden">
                        <h2 class="text-xl font-semibold text-gray-800 mb-4">Friends</h2>
                        
                        <div class="space-y-6">
                            <!-- Friend Requests -->
                            <%- include('_friend_requests') %>
                            
                            <!-- Friends List -->
                            <%- include('_friends') %>
                        </div>
                    </div>
                    
                    <!-- Security Section -->
                    <div id="security-section" class="mb-8 hidden">
                        <h2 class="text-xl font-semibold text-gray-800 mb-4">Security Settings</h2>
                        
                        <form action="/users/password/update" method="POST" class="space-y-4">
                            <div>
                                <label for="current-password" class="block text-sm font-medium text-gray-700 mb-1">Current Password</label>
                                <input type="password" id="current-password" name="currentPassword" 
                                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent">
                            </div>
                            <div>
                                <label for="new-password" class="block text-sm font-medium text-gray-700 mb-1">New Password</label>
                                <input type="password" id="new-password" name="newPassword" 
                                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent">
                            </div>
                            <div>
                                <label for="confirm-password" class="block text-sm font-medium text-gray-700 mb-1">Confirm New Password</label>
                                <input type="password" id="confirm-password" name="confirmPassword" 
                                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent">
                            </div>
                            <button type="submit" class="bg-blue-500 text-white px-6 py-2 rounded-lg hover:bg-blue-600 transition duration-300 shadow-sm">
                                Update Password
                            </button>
                        </form>
                    </div>
                    
                    <!-- Blocked Users Section -->
                    <div id="blocked-section" class="mb-8 hidden">
                        <h2 class="text-xl font-semibold text-gray-800 mb-4">Blocked Users</h2>
                        
                        <div id="blocked-users-list">
                            <%- include('_blocked_users') %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {
        // Tab switching
        $('a[href^="#"]').on('click', function(e) {
            e.preventDefault();
            
            // Remove active class from all tabs
            $('a[href^="#"]').removeClass('bg-blue-50 text-blue-600').addClass('hover:bg-gray-100 text-gray-700');
            
            // Add active class to current tab
            $(this).addClass('bg-blue-50 text-blue-600').removeClass('hover:bg-gray-100 text-gray-700');
            
            // Hide all sections
            $('#profile-section, #friends-section, #security-section, #blocked-section').addClass('hidden');
            
            // Show selected section
            const target = $(this).attr('href').replace('#', '');
            $(`#${target}-section`).removeClass('hidden');
        });
    });
</script>