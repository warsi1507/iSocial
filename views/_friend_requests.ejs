<div class="bg-white rounded-lg shadow-md p-4 mb-6">
    <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
        <i class="fas fa-user-clock mr-2 text-blue-500"></i>
        Friend Requests
    </h3>
    
    <% if (friendRequests && friendRequests.length > 0) { %>
        <ul class="divide-y divide-gray-100">
            <% for(let request of friendRequests) { %>
                <li class="py-3 first:pt-0 last:pb-0" id="friend-request-<%= request.id %>">
                    <div class="flex justify-between items-center">
                        <a href="/users/profile/<%= request.from._id %>" class="flex items-center space-x-3 hover:bg-gray-50 p-2 rounded-md transition-colors duration-300">
                            <div class="w-10 h-10 rounded-full bg-gray-200 flex items-center justify-center text-gray-600">
                                <%= request.from.name.charAt(0).toUpperCase() %>
                            </div>
                            <span class="font-medium text-gray-700"><%= request.from.name %></span>
                        </a>
                        <div class="flex space-x-2">
                            <button class="accept-friend-request bg-blue-500 text-white px-3 py-1 rounded-md hover:bg-blue-600 transition duration-300"
                                    data-request-id="<%= request.id %>">
                                Accept
                            </button>
                            <button class="reject-friend-request-btn bg-gray-200 text-gray-700 px-3 py-1 rounded-md hover:bg-gray-300 transition duration-300"
                                    data-request-id="<%= request.id %>"
                                    data-user-name="<%= request.from.name %>">
                                Reject
                            </button>
                        </div>
                    </div>
                </li>
            <% } %>
        </ul>
    <% } else { %>
        <p class="text-gray-500 text-center py-4">No friend requests</p>
    <% } %>
</div>