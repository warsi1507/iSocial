<div class="bg-white rounded-lg shadow-md p-4 mb-6">
    <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
        <i class="fas fa-user-slash mr-2 text-red-500"></i>
        Blocked Users
    </h3>
    
    <% if (blockedUsers && blockedUsers.length > 0) { %>
        <ul class="divide-y divide-gray-100">
            <% for(let user of blockedUsers) { %>
                <li class="py-3 first:pt-0 last:pb-0" id="blocked-user-<%= user._id %>">
                    <div class="flex justify-between items-center">
                        <div class="flex items-center space-x-3 p-2">
                            <div class="w-8 h-8 rounded-full bg-gray-200 flex items-center justify-center text-gray-600">
                                <%= user.name.charAt(0).toUpperCase() %>
                            </div>
                            <span class="font-medium text-gray-700"><%= user.name %></span>
                        </div>
                        <button class="unblock-user-btn bg-gray-200 text-gray-700 px-3 py-1 rounded-md hover:bg-gray-300 transition duration-300"
                                data-user-id="<%= user._id %>"
                                data-user-name="<%= user.name %>">
                            Unblock
                        </button>
                    </div>
                </li>
            <% } %>
        </ul>
    <% } else { %>
        <p class="text-gray-500 text-center py-4">No blocked users</p>
    <% } %>
</div>