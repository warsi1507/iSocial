      <% } else { %>
        <i class="fas fa-user text-2xl"></i>
      <% } %>
    </a>
    <a href="/" class="text-gray-600 hover:text-blue-500">
      <i class="fas fa-home text-2xl"></i>
    </a>
    <a href="#" class="text-gray-600 hover:text-blue-500">
      <i class="fas fa-bell text-2xl"></i>
    </a>
    <a href="#" class="text-gray-600 hover:text-blue-500">
      <i class="fas fa-cog text-2xl"></i>
    </a>
    <a href="#" class="text-gray-600 hover:text-blue-500">
      <i class="fas fa-search text-2xl"></i>
