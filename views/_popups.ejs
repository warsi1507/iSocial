<!-- Unfriend Confirmation Modal -->
<div id="unfriend-modal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden flex items-center justify-center">
    <div class="bg-white rounded-lg shadow-xl max-w-md w-full p-6 mx-4">
        <h3 class="text-xl font-semibold text-gray-800 mb-4">Unfriend Confirmation</h3>
        <p class="text-gray-600 mb-6">Are you sure you want to unfriend <span id="unfriend-user-name" class="font-medium"></span>?</p>
        
        <div class="flex justify-end space-x-3">
            <button id="cancel-unfriend" class="px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300 transition duration-300">
                Cancel
            </button>
            <button id="confirm-unfriend" class="px-4 py-2 bg-red-500 text-white rounded-md hover:bg-red-600 transition duration-300">
                Unfriend
            </button>
        </div>
    </div>
</div>

